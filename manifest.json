{
  "manifest_version": 2,
  "name": "Spendly",
  "version": "0.1.0",
  "description": "Adds spendly button to transactions",
  "background" : {
    "scripts" : ["background.js"]
  },
  "content_scripts": [{
    "css": ["styles.css"],
    "matches": ["https://bank.simple.com/*"]
  }],
  "browser_action": {
    "default_icon": "spendly-logo-apple.png" 
  },
  "permissions": ["activeTab"]
}
